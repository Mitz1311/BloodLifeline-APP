<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginreg"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent_black_ten_percent"
                android:src="@mipmap/blood_bank_icon_round" />
        </LinearLayout>

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            android:backgroundTint="#66000000"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:drawablePadding="10dp"
            android:fontFamily="@font/cutive"
            android:hint="Enter Email ID"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#F8F5F5"
            android:textColorHint="#F1EAEA"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:backgroundTint="#66000000"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/cutive"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#F8F5F5"
            android:textColorHint="#F1EAEA"
            android:textSize="14sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#C8000000"
            android:fontFamily="@font/adamina"
            android:padding="10dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#65FFFFFF"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:text="Click here for Register"
            android:textColor="#34608F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#65FFFFFF"
            android:fontFamily="@font/adamina"
            android:gravity="right|end"
            android:text="Forgot Password"
            android:textColor="#34608F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ProgressBar
            android:layout_marginTop="100dp"
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
    </LinearLayout>

</ScrollView>