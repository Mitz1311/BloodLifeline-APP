<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:scrollbarStyle="outsideOverlay"
    android:background="@drawable/loginreg"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#66000000"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/cutive"
                android:hint="Enter Full Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#F8F5F5"
                android:textColorHint="#F1EAEA"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/cutive"
            android:backgroundTint="#66000000"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Enter Email ID"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#F8F5F5"
            android:textColorHint="#F1EAEA"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginTop="4dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:fontFamily="@font/cutive"
            android:background="#FFFFFF"
            android:backgroundTint="#66000000"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#F8F5F5"
            android:textColorHint="#F1EAEA"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#66000000"
                android:fontFamily="@font/cutive"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Enter Phone Number"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="#F8F5F5"
                android:textColorHint="#F1EAEA"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Address"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#66000000"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:ems="10"
                android:fontFamily="@font/cutive"
                android:hint="Enter Address"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#F8F5F5"
                android:textColorHint="#F1EAEA"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/state"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#66000000"
                android:fontFamily="@font/cutive"
                android:padding="10dp"
                android:text="States"
                android:textColor="#F8F5F5"
                android:textColorHint="#F1EAEA"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/inputDivision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/division_list">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#66000000"
                android:fontFamily="@font/cutive"
                android:padding="10dp"
                android:text="Blood Group"
                android:textColor="#F8F5F5"
                android:textColorHint="#F1EAEA"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/inputBloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/Blood_Group">

            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selgender"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:backgroundTint="#66000000"
                android:fontFamily="@font/cutive"
                android:padding="10dp"
                android:text="Gender"
                android:textColor="#F8F5F5"
                android:textColorHint="#F1EAEA"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner

                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/gender">

            </Spinner>
        </LinearLayout>
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cutive"
            android:background="#FFFFFF"
            android:backgroundTint="#66000000"
            android:textColor="#F8F5F5"
            android:textColorHint="#F1EAEA"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Mark this to be a donor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#C8000000"
            android:fontFamily="@font/adamina"
            android:padding="10dp"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>

</ScrollView>